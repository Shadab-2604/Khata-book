<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Hisaab</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-brand">
                <h1>Khata Book</h1>
            </div>
            <div class="navbar-nav">
                <a href="/" class="nav-link">Home</a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="nav-link">Dashboard</a>
                    <a href="/users/logout" class="nav-link">Logout</a>
                <% } else { %>
                    <a href="/users/login" class="nav-link">Login</a>
                    <a href="/users/signup" class="nav-link">Sign Up</a>
                <% } %>
                <button id="themeToggle">ðŸŒ“</button>
            </div>
        </nav>
    </header>
    <main>
        <a href="/hisaab/add" class="btn">Add New Hisaab</a>
        <% if (hisaabEntries && hisaabEntries.length > 0) { %>
            <ul class="hisaab-list">
                <% hisaabEntries.forEach(entry => { %>
                    <li class="hisaab-item">
                        <h3><%= entry.description %></h3>
                        <p>Amount: <%= entry.amount %></p>
                        <p>Date: <%= entry.date.toLocaleDateString() %></p>
                        <% if (entry.isEncrypted) { %>
                            <p>Encrypted</p>
                        <% } %>
                        <a href="/hisaab/edit/<%= entry._id %>" class="btn">Edit</a>
                        <a href="/hisaab/delete/<%= entry._id %>" class="btn btn-danger">Delete</a>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No hisaab entries yet.</p>
        <% } %>
    </main>
    <script src="/js/theme.js"></script>
</body>
</html>

