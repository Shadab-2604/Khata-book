<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Hisaab</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
    <nav class="navbar">
        <div class="navbar-brand">
            <h1>Khata Book</h1>
        </div>
        <button class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <div class="navbar-nav">
            <a href="/" class="nav-link">Home</a>
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/users/logout" class="nav-link">Logout</a>
            <% } else { %>
                <a href="/users/login" class="nav-link">Login</a>
                <a href="/users/signup" class="nav-link">Sign Up</a>
            <% } %>
            <button id="themeToggle">ðŸŒ“</button>
        </div>
    </nav>
</header>
    <main>
        <form action="/hisaab/add" method="POST">
            <div>
                <label for="amount">Amount</label>
                <input type="number" id="amount" name="amount" required>
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text" id="description" name="description" required>
            </div>
            <div>
                <label for="isEncrypted">Encrypt this entry</label>
                <input type="checkbox" id="isEncrypted" name="isEncrypted">
            </div>
            <button type="submit" class="btn">Add Hisaab</button>
        </form>
        <a href="/dashboard" class="btn">Back to Dashboard</a>
    </main>
    <script src="/js/hamburger.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>

